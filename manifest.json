{
  "manifest_version": 3,
  "name": "Football Stadium Weather",
  "version": "1.0.0",
  "description": "Get updated weather information for NFL and college football (NCAAF) stadiums.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://y-seven-pi.vercel.app/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/football16.png",
      "48": "icons/football48.png",
      "128": "icons/football128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://y-seven-pi.vercel.app/*"
      ],
      "js": [
        "runtime.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "data/*",
        "icons/*",
        "styles.css"
      ],
      "matches": [
        "https://y-seven-pi.vercel.app/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/football16.png",
    "48": "icons/football48.png",
    "128": "icons/football128.png"
  },
  "offline_enabled": true
}