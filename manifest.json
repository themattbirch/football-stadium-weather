{
  "manifest_version": 3,
  "name": "Football Stadium Weather",
  "version": "1.1.4",
  "version_name": "1.1.4 - Added privacy policy",
  "description": "Get updated weather information for NFL and college football (NCAAF) stadiums. Features temperature unit toggle & offline support. Privacy Policy: https://stadiumweather.app/privacy.html",
  "homepage_url": "https://stadiumweather.app",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://stadiumweather.app/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/football16.png",
      "48": "icons/football48.png",
      "128": "icons/football128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "data/*",
        "icons/*",
        "styles.css"
      ],
      "matches": [
        "https://stadiumweather.app/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/football16.png",
    "48": "icons/football48.png",
    "128": "icons/football128.png"
  },
  "offline_enabled": true
}