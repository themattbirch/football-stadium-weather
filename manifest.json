{
  "manifest_version": 3,
  "name": "GameDay Weather",
  "version": "1.0.0",
  "description": "Real-time weather information for NFL and college football stadiums",
  "permissions": [
    "storage",
    "geolocation",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.openweathermap.org/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/football16.png",
      "48": "icons/football48.png",
      "128": "icons/football128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.espn.com/*",
        "*://*.nfl.com/*",
        "*://*.ncaa.com/*"
      ],
      "js": ["dist/bundle.js"],
      "css": ["src/styles/styles.css"]
    }
  ],
  "icons": {
    "16": "icons/football16.png",
    "48": "icons/football48.png",
    "128": "icons/football128.png"
  },
  "web_accessible_resources": [{
    "resources": [
      "src/data/stadium_coordinates.json"
    ],
    "matches": ["<all_urls>"],
    "use_dynamic_url": true
  }]
} 